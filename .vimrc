syntax on

" Indentation
set autoindent
set expandtab
set shiftround
set shiftwidth=4
set smarttab
set tabstop=4

" Search
set hlsearch
set ignorecase
set smartcase

" Text rendering
set encoding=utf-8

" Interface
set number
set background=dark
set laststatus=2

" 80 Line marker
highlight ColorColumn ctermbg=3*
set colorcolumn=80

" Other
set history=1000
set title
